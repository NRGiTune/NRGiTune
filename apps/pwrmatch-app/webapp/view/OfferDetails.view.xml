<mvc:View controllerName="simulador.controller.OfferDetails"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout">

  <ScrollContainer vertical="true" height="100%" width="100%">

    <VBox class="sapUiSmallMargin">

      <!-- Totals -->
      <Panel headerText="Totais / Ciclo Horário " expandable="false" class="sapUiSmallMarginTop">
        <l:Grid defaultSpan="L4 M12 S12" hSpacing="1" vSpacing="0"
          xmlns:l="sap.ui.layout">
          <l:content>
            <Panel headerText="Simples" expandable="false">
              <VBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Potência {appDataModel>/offerSimulation/powerkWh} kVA | 
                  { path: 'appDataModel>/offerSimulation/totalsSimple/powerDays', formatter: '.formatter.formatInteger'} 
                  Dias"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsSimple/powerValue', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Consumo | {appDataModel>/offerSimulation/totalsSimple/consumptionKwh} kVA"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsSimple/consumptionValueTotal', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                  <Title text="Total" level="H4"/>
                  <Title text="{path: 'appDataModel>/offerSimulation/offerSimpleSimulationTtl', formatter: '.formatter.formatCurrency'}" 
                  level="H4"/>
                </HBox>
              </VBox>
            </Panel>
          </l:content>

          <l:content>
            <Panel headerText="Bi-Horário" expandable="false">
              <VBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Potência {appDataModel>/offerSimulation/powerkWh} kVA | 
                  { path: 'appDataModel>/offerSimulation/totalsBiH/powerDays', formatter: '.formatter.formatInteger'} 
                  Dias"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsBiH/powerValue', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Consumo | {appDataModel>/offerSimulation/totalsBiH/consumptionKwh} kVA"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsBiH/consumptionValueTotal', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                  <Title text="Total" level="H4"/>
                  <Title text="{path: 'appDataModel>/offerSimulation/offerBiHSimulationTtl', formatter: '.formatter.formatCurrency'}" 
                  level="H4"/>
                </HBox>
              </VBox>
            </Panel>
          </l:content>

          <l:content>
            <Panel headerText="Tri-Horário" expandable="false">
              <VBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Potência {appDataModel>/offerSimulation/powerkWh} kVA | 
                  { path: 'appDataModel>/offerSimulation/totalsTriH/powerDays', formatter: '.formatter.formatInteger'} 
                  Dias"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsTriH/powerValue', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween">
                  <Text text="Consumo | {appDataModel>/offerSimulation/totalsTriH/consumptionKwh} kVA"/>
                  <Text text="{path: 'appDataModel>/offerSimulation/totalsTriH/consumptionValueTotal', formatter: '.formatter.formatCurrency'}"/>
                </HBox>
                <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                  <Title text="Total" level="H4"/>
                  <Title text="{path: 'appDataModel>/offerSimulation/offerTriHSimulationTtl', formatter: '.formatter.formatCurrency'}" 
                  level="H4"/>
                </HBox>
              </VBox>
            </Panel>
          </l:content>

        </l:Grid>

      </Panel>


      <!-- Simple Panel -->
      <Panel headerText="Simples" expandable="false" class="sapUiMediumMarginTop">
        <!-- Power Table -->
        <Table id="tblPower" items="{appDataModel>/offerSimulation/simple}">
          <headerToolbar>
            <OverflowToolbar>
              <content>
                <Title text="Potência contratada {appDataModel>/offerSimulation/powerkWh} kVA" level="H2"/>
              </content>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column></Column>
            <Column></Column>
            <Column hAlign="Center">
              <footer>
                <Title text="{ path: 'appDataModel>/offerSimulation/totalsSimple/powerDays', formatter: '.formatter.formatInteger'}" level="H4"/>
              </footer>
            </Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End">
              <footer>
                  <Title text="{path: 'appDataModel>/offerSimulation/totalsSimple/powerValue', formatter: '.formatter.formatCurrency'}" level="H4"/>
              </footer>
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <ObjectStatus 
                text="{path: 'appDataModel>fromDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://workflow-tasks" state="None" />
                <ObjectStatus 
                text="{path: 'appDataModel>toDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://select-appointments" state="None" />
                <Text text="{ path: 'appDataModel>powerDays', formatter: '.formatter.formatInteger'}"/>
                <Text text="{appDataModel>powerkWh}"/>
                <Text text="{path: 'appDataModel>powerDayValue', formatter: '.formatter.formatCurrency'}" />
                <Text text="{path: 'appDataModel>powerValue', formatter: '.formatter.formatCurrency'}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        <!-- Consumption Table -->
        <Table id="tblConsumption" items="{appDataModel>/offerSimulation/simple}">
          <headerToolbar>
            <OverflowToolbar>
              <content>
                <Title text="Consumo" level="H2"/>
              </content>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column></Column>
            <Column></Column>
            <Column hAlign="Center"></Column>
            <Column hAlign="End">
              <footer>
                <Title text="{appDataModel>/offerSimulation/totalsSimple/consumptionKwh}" level="H4"/>
              </footer>
            </Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End">
              <footer>
                <Title text="{path: 'appDataModel>/offerSimulation/totalsSimple/consumptionValueTotal', formatter: '.formatter.formatCurrency'}" level="H4"/>
              </footer>
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <ObjectStatus 
                text="{path: 'appDataModel>fromDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://workflow-tasks" state="None" />
                <ObjectStatus 
                text="{path: 'appDataModel>toDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://select-appointments" state="None" />
                <VBox>
                  <Text text="{appDataModel>consumption/0/consumptionTermEnergy}"/>
                </VBox>
                <VBox>
                  <Text text="{appDataModel>consumption/0/consumptionKWh}"/>
                </VBox>
                <VBox>
                  <Text text="{path: 'appDataModel>consumption/0/consumptionKWhValue', formatter: '.formatter.formatCurrency'}" />
                </VBox>
                <VBox>
                  <Text text="{path: 'appDataModel>consumption/0/consumptionValue', formatter: '.formatter.formatCurrency'}" />
                </VBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>

      </Panel>


      <!-- Bi-Hourly Panel -->
      <Panel headerText="Bi-Horária" expandable="false" class="sapUiMediumMarginTop">
        <!-- Power Table -->
        <Table id="tblBiHPower" items="{appDataModel>/offerSimulation/biH}">

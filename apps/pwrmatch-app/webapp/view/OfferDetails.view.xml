<mvc:View
  controllerName="simulador.controller.OfferDetails"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout">

  <ScrollContainer vertical="true" height="100%" width="100%">

    <VBox class="sapUiMediumMargin">

      <!-- Header contrato -->
      <HBox justifyContent="SpaceBetween" alignItems="Center">
        <HBox alignItems="Center">
          <Image src="{/current/logo}" height="3rem"/>
          <VBox class="sapUiSmallMarginBegin">
            <Title text="{/current/name}" level="H3"/>
            <Text text="{/current/type}"/>
            <Text text="{/current/period}"/>
          </VBox>
        </HBox>
        <VBox alignItems="End">
          <Title text="{/current/amount}" level="H2"/>
        </VBox>
      </HBox>

      <!-- Secção eletricidade -->
      <Panel headerText="Eletricidade" expandable="false" class="sapUiMediumMarginTop">
        <HBox justifyContent="SpaceAround">
          <VBox alignItems="Center">
            <ObjectStatus text="Consumo" state="Success"/>
            <Title text="{/current/totalConsumption}" level="H4"/>
            <Text text="{/current/variablePrice}"/>
          </VBox>
          <VBox alignItems="Center">
            <ObjectStatus text="Termo fixo" state="Information"/>
            <Title text="31 dias" level="H4"/>
            <Text text="{/current/fixedPrice}"/>
          </VBox>
        </HBox>
      </Panel>

      <!-- Detalhes do consumo -->
      <Title text="Detalhes do consumo" level="H5" class="sapUiSmallMarginTop"/>
      <Table items="{/current/details}">
        <columns>
          <Column><Text text="Período"/></Column>
          <Column><Text text="Consumo"/></Column>
          <Column><Text text="Preço por kWh"/></Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <Text text="{period}"/>
              <Text text="{consumption}"/>
              <Text text="{price}"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>

      <!-- Totais -->
      <Panel headerText="Totais" expandable="false" class="sapUiMediumMarginTop">
        <VBox>
          <HBox justifyContent="SpaceBetween">
            <Text text="Termo variável"/>
            <Text text="{/current/totalVariable}"/>
          </HBox>
          <HBox justifyContent="SpaceBetween">
            <Text text="Termo fixo"/>
            <Text text="{/current/totalFixed}"/>
          </HBox>
          <HBox justifyContent="SpaceBetween">
            <Text text="Taxas"/>
            <Text text="{/current/taxes}"/>
          </HBox>
          <HBox justifyContent="SpaceBetween">
            <Text text="Eletricidade" design="Bold"/>
            <Text text="{/current/amount}" design="Bold"/>
          </HBox>
        </VBox>
      </Panel>

    </VBox>
  </ScrollContainer>
</mvc:View>

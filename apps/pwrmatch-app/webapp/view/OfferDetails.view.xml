                <ObjectStatus 
                text="{path: 'appDataModel>toDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://select-appointments" state="None" />
                <Text text="{ path: 'appDataModel>powerDays', formatter: '.formatter.formatInteger'}"/>
                <Text text="{appDataModel>powerkWh}"/>
                <Text text="{path: 'appDataModel>powerDayValue', formatter: '.formatter.formatCurrency'}" />
                <Text text="{path: 'appDataModel>powerValue', formatter: '.formatter.formatCurrency'}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        <!-- Consumption Table -->
        <Table id="tblBiHConsumption" items="{appDataModel>/offerSimulation/biH}">
          <headerToolbar>
            <OverflowToolbar>
              <content>
                <Title text="Consumo" level="H2"/>
              </content>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column></Column>
            <Column></Column>
            <Column hAlign="Center"></Column>
            <Column hAlign="End">
              <footer>
                <Title text="{appDataModel>/offerSimulation/totalsBiH/consumptionKwh}" level="H4"/>
              </footer>
            </Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End">
              <footer>
                <Title text="{path: 'appDataModel>/offerSimulation/totalsBiH/consumptionValueTotal', formatter: '.formatter.formatCurrency'}" level="H4"/>
              </footer>
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <ObjectStatus 
                text="{path: 'appDataModel>fromDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://workflow-tasks" state="None" />
                <ObjectStatus 
                text="{path: 'appDataModel>toDate', formatter: '.formatter.formatDate'}"
                icon="sap-icon://select-appointments" state="None" />
                <VBox>
                  <Text text="{appDataModel>consumption/0/consumptionTermEnergy}"/>
                  <Text text="{appDataModel>consumption/1/consumptionTermEnergy}"/>
                </VBox>
                <VBox>
                  <Text text="{appDataModel>consumption/0/consumptionKWh}"/>
                  <Text text="{appDataModel>consumption/1/consumptionKWh}"/>
                </VBox>
                <VBox>
                  <Text text="{path: 'appDataModel>consumption/0/consumptionKWhValue', formatter: '.formatter.formatCurrency'}" />
                  <Text text="{path: 'appDataModel>consumption/1/consumptionKWhValue', formatter: '.formatter.formatCurrency'}" />
                </VBox>
                <VBox>
                  <Text text="{path: 'appDataModel>consumption/0/consumptionValue', formatter: '.formatter.formatCurrency'}" />
                  <Text text="{path: 'appDataModel>consumption/1/consumptionValue', formatter: '.formatter.formatCurrency'}" />
                </VBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>

      </Panel>

      <!-- Tri-Hourly Panel -->
      <Panel headerText="Tri-Horária" expandable="false" class="sapUiMediumMarginTop">
        <!-- Power Table -->
        <Table id="tblTriHPower" items="{appDataModel>/offerSimulation/triH}">
          <headerToolbar>
            <OverflowToolbar>
              <content>
                <Title text="Potência contratada {appDataModel>/offerSimulation/powerkWh} kVA" level="H2"/>
              </content>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column></Column>
            <Column></Column>
            <Column hAlign="Center">
              <footer>
                <Title text="{ path: 'appDataModel>/offerSimulation/totalsTriH/powerDays', formatter: '.formatter.formatInteger'}" level="H4"/>
            </footer>
            </Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End"></Column>
            <Column hAlign="End">

<mvc:View controllerName="simulador.controller.Step3" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns:m="sap.m"
          xmlns:core="sap.ui.core" >
  <Page title="{i18n>step3Title}">
    <content>
      <VBox class="sapUiSmallMargin">
        <Label text="{i18n>selectPower}" />
        <Select items="{/powers}" selectedKey="{/selectedPower}">
          <core:Item key="{key}" text="{text}" />
        </Select>

        <Label text="{i18n>selectSupplier}" class="sapUiSmallMarginTop" />
        <Select items="{path: 'suppliers>/suppliers'}" change=".onSupplierChange" selectedKey="{/selectedSupplier}">
          <core:Item key="{suppliers>id}" text="{suppliers>name}" />
        </Select>

        <Label text="{i18n>selectTariff}" class="sapUiSmallMarginTop" />
        <Select items="{/tariffs}" selectedKey="{/selectedTariff}">
          <core:Item key="{key}" text="{text}" />
        </Select>

        <Button text="{i18n>details}" press=".onShowDetails" class="sapUiSmallMarginTop" type="Transparent" />

        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
          <Button text="{i18n>back}" press=".onBack" />
          <Button text="{i18n>simulate}" press=".onSimulate" type="Accept" />
        </HBox>
      </VBox>
    </content>
  </Page>
</mvc:View>
